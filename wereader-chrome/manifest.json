{
   "manifest_version": 2,
   "name": "微信读书笔记助手",
   "version": "2.18.3",
   "description": "一个还不错的微信读书笔记工具，方便你导出书本标注等内容，对常使用 Markdown 做笔记的用户尤其有帮助。",
   "background": {
      "page": "background/background.html",
      "persisten": false
   },
   "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
   },
   "browser_action": {
      "default_icon": {
         "16": "icons/icon16.png",
         "24": "icons/icon24.png",
         "32": "icons/icon32.png"
      },
      "default_popup": "popup/popup.html",
      "default_title": "wereader"
   },
   "content_scripts": [
      {
         "matches": [
            "*://weread.qq.com/web/reader/*"
         ],
         "js": [
            "content/content-scroll.js",
            "content/content-theme.js"
         ],
         "css": [
            "content/content-hideScroll.css",
            "content/rankChapter.css"
         ],
         "run_at": "document_start"
      },
      {
         "matches": [
            "*://weread.qq.com/web/shelf"
         ],
         "css": [
            "content/content-shelf.css",
            "content/assets/css/sweetalert2.min.css",
            "content/shelfOrganizing.css"
         ],
         "js": [
            "content/assets/js/jQuery.min.js",
            "content/assets/js/sweetalert2.min.js",
            "content/shelfOrganizing.js"
         ],
         "run_at": "document_idle"
      },
      {
         "matches": [
            "*://weread.qq.com/web/reader/*"
         ],
         "js": [
            "content/content-alert.js",
            "content/assets/js/sweetalert2.min.js"
         ],
         "css": [
            "content/assets/css/sweetalert2.min.css"
         ],
         "run_at": "document_idle"
      },
      {
         "matches": [
            "*://weread.qq.com/web/reader/*"
         ],
         "js": [
            "content/content-getChapters.js",
            "content/content-scrollNote.js",
            "content/content-markedData.js",
            "content/content-rightClick.js",
            "content/content-deleteBookmarks.js"
         ],
         "run_at": "document_end"
      }
   ],
   "options_page": "options/options.html",
   "options_ui": {
      "page": "options/options.html",
      "open_in_tab": true
   },
   "homepage_url": "https://github.com/Higurashi-kagome/wereader",
   "permissions": [
      "tabs",
      "cookies",
      "storage",
      "contextMenus",
      "*://weread.qq.com/*",
      "*://i.weread.qq.com/*",
      "webRequest"
   ]
}