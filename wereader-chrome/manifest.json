{	
   "manifest_version": 2,
   "name": "微信读书笔记助手",
   "version": "2.4.0",
   "description": "一个还不错的微信读书笔记工具，方便你导出书本标注等内容，对常使用Markdown做笔记的用户尤其有帮助。",
   "background": {
	"page": "background/background.html",
	"persisten": false
   },
   "icons":
	{
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
   "browser_action": {
      "default_icon": {
         "16": "icons/icon16.png",
         "24": "icons/icon24.png",
         "32": "icons/icon32.png"
      },
      "default_popup": "",
      "default_title": "wereader"
   },
   "content_scripts": 
	[
      {
			"matches": ["*://weread.qq.com/web/reader/*"],
         "js": ["content/content-scroll.js","content/content-theme.js"],
         "css": ["content/content-hideScroll.css","content/rankChapter.css"],
			"run_at": "document_start"
      },
      {
			"matches": ["*://weread.qq.com/web/shelf"],
         "js": ["content/content-shelf.js"],
         "css": ["content/content-shelf.css"],
			"run_at": "document_idle"
      },
      {
			"matches": ["*://weread.qq.com/web/reader/*"],
			"js": ["content/content-pre.js","content/content-bookType.js"],
			"run_at": "document_end"
      },
      {
			"matches": ["*://weread.qq.com/web/reader/*"],
         "js": ["content/content-notification.js","content/sweetalert2.min.js"],
         "css": ["content/sweetalert2.min.css"],
			"run_at": "document_idle"
      }
   ],
   "options_page": "options/options.html",
   "options_ui":
	{
    	"page": "options/options.html",
    	"open_in_tab": true
   },
   "homepage_url": "https://github.com/liuhao326/wereader",
	"permissions":
	[
      "tabs",
      "cookies",
      "storage",
      "contextMenus",
	  "*://weread.qq.com/web/reader/*",
      "*://weread.qq.com/*",
      "*://i.weread.qq.com/*",
      "webRequest"
   ]
}
