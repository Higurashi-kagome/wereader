{	
   "manifest_version": 2,
   "name": "微信读书笔记助手",
   "version": "1.3.1",
   "description": "一个还不错的微信读书笔记工具，方便你导出书本标注等内容，对常使用Markdown做笔记的用户尤其有帮助。",
   "background": {
	"page": "background/background.html",
	"persisten": false
   },
   "icons":
	{
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
   "browser_action": {
      "default_popup": "",
      "default_title": "wereader"
   },
   "content_scripts": 
	[
      {
			"matches": ["*://weread.qq.com/"],
			"js": ["content/content-login.js"],
			"run_at": "document_idle"
      },
      {
			"matches": ["*://weread.qq.com/web/reader/*"],
			"js": ["content/content-theme.js"],
			"run_at": "document_start"
      }
   ],
   "options_page": "options/options.html",
   "options_ui":
	{
    	"page": "options/options.html",
    	"chrome_style": true
   },
   "homepage_url": "https://github.com/liuhao326/wereader",
   "web_accessible_resources": ["inject/inject-login.js","inject/inject-shelf.js"],
	"permissions":
	[
      "tabs",
      "cookies",
      "storage",
	  "*://weread.qq.com/web/reader/*",
      "*://weread.qq.com/*",
      "*://i.weread.qq.com/*"
   ]
}
