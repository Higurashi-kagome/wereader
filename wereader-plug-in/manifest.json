{	
   "manifest_version": 2,
   "name": "wereader",
   "version": "1.0.0",
   "description": "微信读书笔记工具",
   "background": {
	"page": "background.html",
	"persisten": false
   },
   "browser_action": {
      "default_popup": "popup.html",
      "default_title": "wereader"
   },
   "content_scripts": 
	[
		{
			"matches": ["*://weread.qq.com/web/reader/*"],
			"js": ["content-script-bid.js"],
			"run_at": "document_idle"
      },
      {
			"matches": ["*://weread.qq.com/"],
			"js": ["content-script-login.js"],
			"run_at": "document_idle"
      }
   ],
   "web_accessible_resources": ["inject-login.js","inject-bid.js"],
	"permissions":
	[
      "tabs",
		"notifications",
		"webRequest",
		"webRequestBlocking",
      "storage",
      "cookies",
      "*://*/*"
   ]
}
